# Gemini API 金鑰
GEMINI_API_KEY=your_gemini_api_key_here

# 应用配置 (可选)
APP_HOST=0.0.0.0
APP_PORT=8001
APP_ENV=production

# Cloudflare 配置 (可选，用于高级功能)
CLOUDFLARE_ZONE_ID=your_zone_id_here
CLOUDFLARE_API_TOKEN=your_cf_api_token_here

# 数据库配置 (如果使用数据库)
# DATABASE_URL=postgresql://user:password@localhost:5432/gemini_api

# 日志级别
LOG_LEVEL=INFO

# 文件上传限制 (MB)
MAX_FILE_SIZE=50

# 安全配置
ALLOWED_ORIGINS=*
API_KEY_HEADER=X-API-Key